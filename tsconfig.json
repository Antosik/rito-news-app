{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"plugins": [{ "name": "vite-plugin-iso-import" }],
		"types": [
			"svelte-intl-precompile",
			"svelte-multiselect"
		],
		"paths": {
			"$lib": [
				"./src/lib"
			],
			"$lib/*": [
				"./src/lib/*"
			],
			"$locales": [
				"./locales"
			],
			"$locales/*": [
				"./locales/*"
			],
		},
	},
}
